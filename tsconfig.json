{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "typeRoots": [
        "node_modules/@types"
    ],
    "baseUrl": "./src",
    "outDir": "./lib",
    "tsBuildInfoFile": "lib/.tsbuildinfo"
  },
  "include": ["./src"]
}
